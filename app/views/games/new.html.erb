<h1>New game</h1>
<ul>
  <%  @grid.each do |letter|%>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="POST">
  <label for="word">What is the longest word you can find?</label>
  <div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid %>
    <!-- <input name="grid" type="hidden" value="<%= @grid.join %>" /> -->
    <input type="text" name="word"><input type="submit" value="Play">
  </div>
</form>
